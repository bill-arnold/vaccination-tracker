<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center">Dashboard</h1>
        <h1 class="text-center">The Immunization Crusader</h1>

        <!-- Form to add a new individual -->
        <form action="/add" method="POST" class="mt-4">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="mb-3">
                <label for="vaccine_type" class="form-label">Vaccine Type</label>
                <input type="text" class="form-control" id="vaccine_type" name="vaccine_type" required>
            </div>
            <div class="mb-3">
                <label for="vaccination_date" class="form-label">Vaccination Date</label>
                <input type="date" class="form-control" id="vaccination_date" name="vaccination_date" required>
            </div>
            <div class="mb-3">
                <label for="status" class="form-label">Vaccination Status</label>
                <select class="form-select" id="status" name="status" required>
                    <option value="Completed">Completed</option>
                    <option value="Pending">Pending</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Add Individual</button>
        </form>

        <table class="table table-striped mt-5">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Vaccine Type</th>
                    <th>Vaccination Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% individuals.forEach((individual)=> { %>
                    <tr>
                        <td>
                            <%= individual.name %>
                        </td>
                        <td>
                            <%= individual.vaccine_type %>
                        </td>
                        <td>
                            <%= individual.vaccination_date %>
                        </td>
                        <td>
                            <%= individual.status %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <a href="/" class="btn btn-secondary">Back to Home</a>
        <form action="/logout" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger">Logout</button>
        </form>


    </div>
</body>

</html>